@model IEnumerable<DokumentiViewModel>

<table class="table table-striped">
    <thead>
    <tr>
        @{
            string[] nazivi = { "DatumNastanka", "Stavka", "Formt", "Vrsta"};
            for (int i = 0; i < nazivi.Length; i++)
            {
                <th class="text-center">
                    @nazivi[i]
                </th>
            }
        }
        <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var stavka in Model)
    { 
       <tr>
                <td class="text-left col-sm-4">
                    <input type="hidden" name="Dokumenti.Index" value="@stavka.IdDokumenta"/>
                    <input type="hidden" name="Dokumenti[@stavka.IdDokumenta].IdDokumenta" value="@stavka.IdDokumenta" />
                    <input type="hidden" name="Dokumenti[@stavka.IdDokumenta].DatumNastanka" value="@stavka.DatumNastanka" /> 
                    <input type="hidden" name="Dokumenti[@stavka.IdDokumenta].Format" value="@stavka.Format" />
                    @stavka.Stavka                                 
                </td>
                <!-- Add other fields as needed -->
                <td>
                    <button class="btn btn-sm btn-danger deleterow" title="Izbaci"><i class="fa fa-minus"></i></button>
                </td>               
            </tr>
        }
    
        <tr>
            <td>
                    <input id="DatumNastanka" type="text" name="Dokumenti.NewItem.DatumNastanka" />
                </td>
                <td class="text-center col-sm-1">
                    <input id="Format" type="text" name="Dokumenti.NewItem.Format" /> 
                </td>
                <!-- Add other fields for the new item -->
                <td class="text-center col-sm-1">
                    <input id="IdVrsteDokumenta" type="text" name="Dokumenti.NewItem.IdVrsteDokumenta" />
                </td>
                <td class="text-left" colspan="3">
                    <button id="dodajDokument" class="btn btn-sm btn-secondary" title="Dodaj"><i class="fas fa-plus"></i></button>
                </td>
        </tr>


    </tbody>
    </table>